<p id="notice"><%= notice %></p>

<h1>Your Bookworm Catalog</h1>

<% @products.each do |product| %>
  <div>
    <%= image_tag(product.image_url) %>
    <h3><%= product.title %></h3>
    <%= sanitize(product.description) %>
    <div>
      <span><%= number_to_currency(product.price) %></span>
    </div>
  </div>
<% end %>